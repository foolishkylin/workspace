{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "shared"
        },
        "windows": {
          "command": "g++",
          "args": [
            "-ggdb",
            "\"${file}\"",
            "--std=c++11",
            "-o",
            "\"${fileDirname}\\${fileBasenameNoExtension}.exe\""
          ]
        },
        "group":{
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }